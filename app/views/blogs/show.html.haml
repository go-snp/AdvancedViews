%h1<
  Title:
  = @blog.title

= link_to 'Edit', edit_blog_path
|
= link_to 'Back', blogs_path

%h2<
  Listing entries

%table
  %thead
    %th<
      Title
    %th<
      Body
    %th{colspan: 3}<

  %tbody
    - @entries.each do |entry|
      %td<
        = entry.title
      %td<
        = entry.body
      %td<
        = link_to 'Show', entry
      %td<
        = link_to 'Edit', edit_entry_path(entry)
      %td<
        = link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }

= link_to 'New Entry', new_entry_path
